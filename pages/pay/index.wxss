page {
  padding-bottom: 90rpx;
}
.recive_address .user_adderss {
  display: flex;
  padding: 20rpx;
}
.recive_address .user_adderss .user_info {
  flex: 5;
}
.recive_address .user_adderss .user_phone {
  flex: 3;
  text-align: right;
}
.cart_content .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-top: 1px solid currentColor;
  border-bottom: 1px solid currentColor;
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_content .cart_main .cart_item .cart_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_img image {
  width: 80%;
}
.cart_content .cart_main .cart_item .cart_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info .good_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_content .cart_main .cart_item .cart_info .good_price {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info .good_price .price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_content .cart_main .cart_item .cart_info .good_price .num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_info .good_price .num_tool .num_edit,
.cart_content .cart_main .cart_item .cart_info .good_price .num_tool .num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.foot_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
  display: flex;
}
.foot_tool .total_price {
  flex: 5;
  padding-right: 15rpx;
  text-align: right;
}
.foot_tool .total_price .price .price_text {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
}
.foot_tool .order-pay {
  flex: 3;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  background-color: var(--themeColor);
  display: flex;
  justify-content: center;
  align-items: center;
}
